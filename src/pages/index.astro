---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';

const metadata = {
  title: 'Conor Dowling â€” Lead Software Engineer',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'View Resume',
        href: '/resume',
      },
      {
        text: 'GitHub',
        href: 'https://github.com/conordowling',
        target: '_blank',
        icon: 'tabler:brand-github',
      },
      {
        text: 'LinkedIn',
        href: 'https://www.linkedin.com/in/conor-dowling/',
        target: '_blank',
        icon: 'tabler:brand-linkedin',
      },
    ]}
  >
    <Fragment slot="title">
      Hi, I'm <span class="text-accent dark:text-white">Conor Dowling</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-xl">Lead Software Engineer</span>
      <span class="block mt-4">
        10+ years of experience in functional programming, data engineering, and petabyte-scale data analytics.
        Specializing in building robust, scalable systems that process massive datasets and deliver actionable insights.
      </span>
    </Fragment>
  </Hero>

  <!-- Skills Widget **************** -->

  <Features
    id="skills"
    title="Technical Expertise"
    subtitle="Core technologies and tools I work with to build scalable data systems"
    items={[
      {
        title: 'Python',
        description:
          'Expert in Python for data engineering, backend services, and analytics pipelines.',
        icon: 'tabler:brand-python',
      },
      {
        title: 'Scala',
        description:
          'Functional programming with Scala for distributed data processing and type-safe systems.',
        icon: 'tabler:code',
      },
      {
        title: 'AWS',
        description:
          'Cloud infrastructure design and implementation using AWS services for scalable data platforms.',
        icon: 'tabler:cloud',
      },
      {
        title: 'Apache Spark',
        description:
          'Large-scale data processing and analytics with Spark for petabyte-scale workloads.',
        icon: 'tabler:database',
      },
      {
        title: 'Apache Iceberg',
        description:
          'Modern data lakehouse architecture and table format for high-performance analytics.',
        icon: 'tabler:table',
      },
      {
        title: 'ClickHouse',
        description:
          'Real-time analytics and OLAP database for fast query performance on massive datasets.',
        icon: 'tabler:chart-bar',
      },
    ]}
  />
</Layout>
